mixin marketHeader(title, text, className)
	header.page-header.page-header_other-page(class="page-header_" + className)
		.header-decor-wrapper.wrapper
			.big-header-decor.left
			.big-header-decor.right
			.small-header-decor.left
			.small-header-decor.right
		include ../blocks/nav.pug
		.wrapper.wrapper-header.wrapper-header__other-page
			.img-background-header.desctop
				picture
					source(srcset=baseDir + "assets/images/markets-" + className + "-bg_1x.webp 1x, " + baseDir + "assets/images/markets-" + className + "-bg_2x.webp 2x" type="image/webp")
					img(src=baseDir + "assets/images/markets-" + className + "-bg_1x.png" srcset=baseDir + "assets/images/markets-" + className + "-bg_1x.png 1x, " + baseDir + "assets/images/markets-" + className + "-bg_2x.png 2x" alt="forex")
			.img-background-header.mobile
				img(src=baseDir + "assets/images/markets-" + className + "-mobile.jpg" alt="main slide")
			.text-header-wrapper.text-header-wrapper_markets
				h1.page-header__title.h1-title !{title}
				p.page-header__text !{text}
				a(href=linkSignup).btn.btn-start-trade !{buttonText.btnStartTrade[lang]}
